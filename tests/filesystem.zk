use { write_file, read_file, read_dir, create_dir, is_file, is_dir, remove_dir, remove_file } from fs;

// create a file
let input: string = @input => |"Enter some text: "|;
write_file => |"data.txt", input|

// read file content
let data: string = read_file => |"data.txt"|;
@println => |"Data.txt: " + data|

// read directory content
data = read_dir => |"tests"|
@println => |"Read Directory: " + data|

// create directory
create_dir => |"test_dir"|
data = exists => |"test_dir"|
@println => |"Directory exists: " + data|

// is file and is directory
data = is_file => |"data.txt"|
@println => |"Is file: " + data|

data = is_dir => |"test_dir"|
@println => |"Is directory: " + data|

// remove file and directory and check if they exist afterwards
remove_dir => |"test_dir"|
data = exists => |"test_dir"|
@println => |"Directory exists after removal: " + data|

remove_file => |"data.txt"|
data = exists => |"data.txt"|
@println => |"File exists after removal: " + data|
